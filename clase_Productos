    public void pedir(){
        
        if(t4.getText().equalsIgnoreCase(p1.nombre))
        {
            String text = String.valueOf(p1.cantidad);
            String text1 = String.valueOf(p1.iva);
            String text2 = String.valueOf(p1.precio);
            t6.setText(text);
            t8.setText(text1);
            t10.setText(text2);
        }
        if(t5.getText().equalsIgnoreCase(p2.nombre))
        {
            String text = String.valueOf(p2.cantidad);
            String text1 = String.valueOf(p2.iva);
            String text2 = String.valueOf(p2.precio);
            t7.setText(text);
            t9.setText(text1);
            t11.setText(text2);
        }
        if(t12.getText().equalsIgnoreCase(p3.nombre))
        {
            String text = String.valueOf(p3.cantidad);
            String text1 = String.valueOf(p3.iva);
            String text2 = String.valueOf(p3.precio);
            t14.setText(text);
            t16.setText(text1);
            t18.setText(text2);
        }
        if(t13.getText().equalsIgnoreCase(p4.nombre))
        {
            String text = String.valueOf(p4.cantidad);
            String text1 = String.valueOf(p4.iva);
            String text2 = String.valueOf(p4.precio);
            t15.setText(text);
            t17.setText(text1);
            t19.setText(text2);
        }
    }
    
    
    
    public void vender(){
        
        if(t4.getText().equals(p1.nombre))
        {
            prod.tot += Double.parseDouble(t10.getText()) * p1.iva;
            String text = String.valueOf(prod.tot);

            t1.setText(text);
            
            cont();

        }
        if(t5.getText().equalsIgnoreCase(p2.nombre))
        {
            prod.tot += Double.parseDouble(t11.getText()) * p2.iva;
            String text = String.valueOf(prod.tot);
            
            t1.setText(text);
            
            cont();
        }
        if(t12.getText().equalsIgnoreCase(p3.nombre))
        {
            prod.tot += Double.parseDouble(t18.getText()) * p3.iva;
            String text = String.valueOf(prod.tot);
            
            t1.setText(text);
            
            cont();
        }
        if(t13.getText().equalsIgnoreCase(p4.nombre))
        {
            prod.tot += Double.parseDouble(t19.getText()) * p4.iva;
            String text = String.valueOf(prod.tot);
            
            t1.setText(text);
            
            cont();
        }
    }
    
    public void cont(){
        
        if(t4.getText().equals(p1.nombre))
        {
            String text0 = String.valueOf(p1.cantidad -= cont);
            
            t6.setText(text0);
        }
        if(t5.getText().equals(p2.nombre))
        {
            String text0 = String.valueOf(p2.cantidad -= cont);
            
            t7.setText(text0);
        }
        if(t12.getText().equalsIgnoreCase(p3.nombre))
        {
            String text0 = String.valueOf(p3.cantidad -= cont);
            
            t14.setText(text0);
        }
        if(t13.getText().equalsIgnoreCase(p4.nombre))
        {
            String text0 = String.valueOf(p4.cantidad -= cont);
            
            t15.setText(text0);
        }
        masV();
    }
    
    public void masV(){
        
        /*
            p1.cantidad = 18
            p2.cantidad = 25
            p3.cantidad = 30
            p4.cantidad = 15
        */
        
        t2.setText(p4.nombre);
        t3.setText(p3.nombre);
        
        if(p1.cantidad < p2.cantidad && p1.cantidad < p3.cantidad && p1.cantidad < p4.cantidad)
        {
            t2.setText(p1.nombre);
        }
        if(p1.cantidad > p2.cantidad && p1.cantidad > p3.cantidad && p1.cantidad > p4.cantidad)
        {
            t3.setText(p1.nombre);
        }
        if(p2.cantidad < p1.cantidad && p2.cantidad < p3.cantidad && p2.cantidad < p4.cantidad)
        {
            t2.setText(p2.nombre);
        }
        if(p2.cantidad > p1.cantidad && p2.cantidad > p3.cantidad && p2.cantidad > p4.cantidad)
        {
            t3.setText(p2.nombre);
        }
        if(p3.cantidad < p1.cantidad && p3.cantidad < p2.cantidad && p3.cantidad < p4.cantidad)
        {
            t2.setText(p3.nombre);
        }
        if(p3.cantidad > p1.cantidad && p3.cantidad > p2.cantidad && p3.cantidad > p4.cantidad)
        {
            t3.setText(p3.nombre);
        }
        if(p4.cantidad < p1.cantidad && p4.cantidad < p2.cantidad && p4.cantidad < p3.cantidad)
        {
            t2.setText(p4.nombre);
        }
        if(p4.cantidad > p1.cantidad && p4.cantidad > p2.cantidad && p4.cantidad > p3.cantidad)
        {
            t3.setText(p4.nombre);
        }
    }
    
